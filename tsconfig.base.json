{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "esnext",
    // Enables project references
    "composite": true,
    // Allow JSX
    "jsx": "react",
    // Only output declaration files
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    // Compiler strictness
    "strict": true,
    "skipLibCheck": true
  }
}
